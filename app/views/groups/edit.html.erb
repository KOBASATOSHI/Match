<h1>edit profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |f| %>
      <%= f.label :user_id %>
      <%= f.text_field :user_id, class: 'form-control' %>
      
      <%= f.label :info %>
      <%= f.text_field :info, class: 'form-control' %>
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>